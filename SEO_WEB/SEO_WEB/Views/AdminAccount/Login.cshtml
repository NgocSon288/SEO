@model SEO_WEB.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        .parent {
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="parent">
        @using (Html.BeginForm("Login", "AdminAccount", FormMethod.Post))
        {
            <span>Tài khoản: </span>
            @Html.TextBoxFor(Model => Model.Username);

            <br /><br />

            <span>Mật khẩu:</span>
            @Html.PasswordFor(Model => Model.Password);
            <br /><br />
            <input type="submit" value="Đăng nhập" />
            <a href="/AdminAccount/SignUp" style="margin-left: 30px;">Đăng ký</a>
        }
    </div>
</body>
</html>
