@model List<SEO_WEB.Models.City>

<div class="flex flex-wrap">
    @foreach (var item in Model)
    {
        <div class="p-2 lg:w-1/3 md:w-1/2 w-full" style="height: 200px;">
            <a href="/bai-viet-tong-hop/@item.Alias">
                <div class="h-full flex items-center border-gray-200 border p-4 rounded-lg">
                    <img alt="@item.Alt"
                         class="w-32 h-32 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4"
                         src="~/Assets/Admin/images/city/@item.Avatar" />
                    <div class="flex-grow">
                        <h2 class="text-gray-900 title-font font-medium">@item.DisplayName</h2>
                        @{
                            var str = item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description;
                            try
                            {
                                str = str.Substring(0, str.LastIndexOf(' ')) + "...";
                            }
                            catch (Exception)
                            {

                            }
                        }
                        <p class="text-gray-500" style="height: 130px;">@str</p>
                    </div>
                </div>
            </a>
        </div>
    }

</div>
